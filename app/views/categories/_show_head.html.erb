<div class="card-header" id="card-header">
  <div class="col-md-12 row">
    <div class="col-md-12">
      <div class="text-center">
        <h3><b class="titulos_admin">
          <%= @category.name %>
        </b></h3>
      </div>
    </div>
    <% if current_user.user_roles == "SuperAdmin" || current_user.user_roles == "Adulto Responsable" %>
      <div class="col-md-12 text-right">
        <%= link_to url_for({controller: controller.controller_name,
          action: :edit}), class: 'btn btn-primary text-white', id: 'edit_button' do%>
          <i class="fas fa-edit"></i> <%= t('general.edit') + " " +
          t("application.#{controller.controller_name}") %>
        <% end %>
      </div>
    <% end %>
    <%= link_to url_for({controller: controller.controller_name,
      action: :index}), class: 'btn btn-info text-white', id: 'index_button' do%>
      <i class="fas fa-list-ul text-white"></i> Regresar
      <%= t("application.#{controller.controller_name}") %>
      <% end %>
    <hr id="hr">
    <hr id="hr">
  </div>
</div>
