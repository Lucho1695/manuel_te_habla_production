<% if !@categories.nil? && !@categories.empty?%>
  <div class="row">
    <% @categories.each do |category| %>
      <div class="col-md-4">
        <div class="card border-dark bg-light" id="shadow">
          <div class="card-body">
            <div class="text-center">
              <%= link_to category, onclick: "myFunction('', '#{category.name}')" do %>
                <img
                  onclick="return <%= category.category_image.present? ? true : false %>" id= "<%= category.id %>">
                  <%= show_image(category.category_image) %>
                </img>
              <% end %>
            </div>
          </div>
          <div class="card-footer text-center"
          style="background: <%= '#' + "%06x" % (rand * 0xaaaaa)%>;
          border-radius: 1em/5em; font-size: 35px">
            <%= link_to category.name, category,
            onClick: "myFunction('', '#{category.name}')", class: "navButton text-white",
            style: "width: 50%; heigth: 50%" %>
          </div>
        </div>
        <div class="">
          <br><br>

        </div>
      </div>
    <% end %>
  </div>
<% end %>

<style media="screen">
  #shadow {
    box-shadow: 0px 8px 15px #404040;
  }
</style>
