<div class="card-body">
  <!--Strats Title -->
  <div class="col-md-12">
    <h3 class="text-center">
      <%= image_tag "titles_say_ideas.png", style: "max-width:70%" %>
    </h3>
    <!--Strats New Button -->
  </div>
  <!-- Ends Title-->

  <div class="col-md-12">
    <textarea class="col-md-12" rows="4" id="alltext" disabled></textarea>
    <div class="col-md-12 row">
      <button class="btn btn-primary col-md-3" onclick="PlayText()">Reproducir</button>
      <%= link_to "Limpiar", say_ideas_path, class: "btn btn-warning col-md-3", onclick: "ClearText()"%>
    </div>
  </div>
  <br>
  <div class="row" id="results">
    <% @say_ideas.each do | say_idea | %>
    <% if say_idea.say_idea_type == 3 %>
    <% article = Article.find(say_idea.article_id).name if !say_idea.article_id.nil? %>
    <div class="col-md-4">
      <div class="card border-info">
        <div class="card-header">
          <%= say_idea.title %>
        </div>
        <div class="card-body">
          <% onclick="(#{say_idea.title})"%>
          <% onClick2="myFunction('', '#{say_idea.title}')"%>
          <% value="#{say_idea.title}"%>
          <% id= "#{say_idea.title.gsub(' ', '')}" %>
          <div class="row">
            <%= link_to verbs_say_ideas_path(id: say_idea.id) do %>
              <%= image_tag say_idea.say_idea_image,
              style: "width: 315px;
              height: 315px;
              max-width: 100%;
              max-height: 100%;
              background-color: #eee;
              white-space: nowrap;
              text-align: center;",
              class: "navButton text-white",
              onClick: onclick,
              onclick: onClick2,
              value: value + " ",
              id: id %>
            <% end %>
          </div>
        </div>
      </div>
      <script>
        $("#<%= say_idea.title.gsub(' ', '') %>").on("click", function(){
          var targ = event.target || event.srcElement;
          document.getElementById("alltext").value += "<%= article %> " + targ.getAttribute("value") + " "
        })

      </script>
    </div>
    <% end %>
    <% end %>
    <script>
      document.getElementById("alltext").value += "<%= @last_idea %> <%= @last_verb %> "
    </script>
  </div>

  <script>

    function ClearText() {
      document.getElementById("alltext").value = ""
    }
    function PlayText(){
      var value = document.getElementById("alltext").value
      var msg = new SpeechSynthesisUtterance();
      var msga = value;
      // msg.volume = 1; // 0 to 1
      msg.rate = 1; // 0.1 to 10
      msg.pitch = 1.11; //0 to 2
      msg.text = msga
      msg.lang = 'es-ES';
      speechSynthesis.speak(msg);
    }
  </script>
</div>
