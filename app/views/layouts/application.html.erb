<script>
  function myFunction(mensaje, val) {
    var msg = new SpeechSynthesisUtterance();
    var msga = mensaje + val;
    // msg.volume = 1; // 0 to 1
    msg.rate = 1; // 0.1 to 10
    msg.pitch = 1.11; //0 to 2
    msg.text = msga
    msg.lang = 'es-ES';
    speechSynthesis.speak(msg);
  }

  window.onload = function(){
    if ($(window).width() < 992) {
      $('#banner').attr("id","newId");
    }
    else {
      $('#newId').attr("id","banner");
    }
  }

  window.onresize = function(){
    if ($(window).width() < 992) {
      $('#banner').attr("id","newId");
    }
    else {
      $('#newId').attr("id","banner");
    }
  }


</script>
