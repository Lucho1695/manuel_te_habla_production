<div class="card border-info">
  <div class="card-header">
    <p id="notice"><%= notice %></p>

    <p>
      <strong>Title:</strong>
      <%= @video.title %>
    </p>
  </div>
  <% if !@video.upload_files.empty? %>
    <video
    id="my-video"
    class="video-js"
    controls
    preload="auto"
    width="640"
    height="264"
    data-setup="{}"
    >
      <source
      type="<%= @video.upload_files.first.content_type %>"
      src="data:<%= @video.upload_files.first.content_type %>;base64,<%= Base64.encode64(@video.upload_files.first.blob.data) %>"/>
    </video>
  <% else %>
    <% if !@video.url.nil? %>
      <%= @video.url %>
        <div class="col-md-4">
          <iframe width="420" height="315"
          src="<%= @video.url %>">
        </iframe>
    <% end %>
  <% end %>

  <div class="card-body">
    <p>
      <strong>Description:</strong>
      <%= @video.description %>
    </p>
  </div>
  <div class="card-footer">
    <%= link_to "Editar", edit_video_path(@video) %> |
    <%= link_to "Regresar", videos_path %>
  </div>
</div>
