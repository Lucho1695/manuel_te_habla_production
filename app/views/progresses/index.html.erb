<p id="notice"><%= notice %></p>

<h3>Progresses</h3>

<table>
  <thead>
    <tr>
      <th>Goal</th>
      <th>Total time</th>
      <th>Level</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @progresses.each do |progress| %>
      <tr>
        <td><%= progress.goal_id %></td>
        <td><%= progress.total_time %></td>
        <td><%= progress.level_id %></td>
        <td><%= link_to "Mostrar", progress %></td>
        <td><%= link_to "Editar", edit_progress_path(progress) %></td>
        <td><%= link_to Eliminar, progress, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Progress', new_progress_path %>
