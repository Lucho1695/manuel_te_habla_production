<div class="col-md-12">
  <div class="nested-fields">
    <div class="card border-info">
      <div class="card-body">
        <%= f.hidden_field :_destroy %>
        <%= f.text_field :name, placeholder: 'Opciones de respuesta', class: 'form-control' %>
        <br>
        <%= f.file_field :answer_file %>
        <div class="text-right">
          <small>
            <%= link_to_remove_association '<span class="fa fa-minus white"></span> Eliminar Respuesta'.html_safe, f, class: 'btn btn-danger text-white' %>
          </small>
        </div>

      </div>
    </div>
    <br><br>
  </div>
</div>
