<div class="container-fluid">
  <div class="card-header" id="card-header">
    <div class="row">
      <div class="col-md-12">
        <div class="col-md-6">
          <h3><b class="titulos_admin">
            <%= t("general.#{controller.action_name}") %>
            <%= t("application.#{controller.controller_name}") %>
          </b></h3>
        </div>
        <div class="col-md-12 text-right">
          <%= link_to edit_person_path(Person.find_by(email: current_user.email)), class: 'btn btn-primary text-white', id: 'edit_button' do%>
            <i class="fas fa-edit"></i> <%= t('general.edit') + " " +
            t("application.#{controller.controller_name}") %>
          <% end %>
          <%= link_to url_for(), class: 'btn btn-info text-white', id: 'index_button' do%>
            <i class="fas fa-list-ul text-white"></i> Regresar
            <%= t("application.#{controller.controller_name}") %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <br/>
</div>

<!-- Start User table -->
<div class="col-md-12">
  <div class="table-responsive">
    <table class="table table-bordered table-striped table-condensed">
      <tr>
        <th>Nombre</th>
        <td><%= @user.name.upcase %></td>
      </tr>
      <tr>
        <th>Correo</th>
        <td><%= @user.email.upcase %></td>
      </tr>

      <tr>
        <th>Creado</th>
        <td><%= @user.created_at.localtime.strftime("%Y-%m-%d %H:%M") %></td>
      </tr>
      <!-- Ends Groups Section -->

    </table>
  </div>
</div>
<!-- Ends User table -->
